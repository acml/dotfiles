# Workspace: games
# Assign: steam

workspace $ws5 output $OUTPUT-HOME-BENQ $OUTPUT-LAPTOP

for_window [instance="Steam"] \
  move window to workspace $ws5; \
  focus; \
  inhibit_idle fullscreen;

for_window [app_id="lutris"] \
  move window to workspace $ws5; \
  focus; \
  inhibit_idle fullscreen;
