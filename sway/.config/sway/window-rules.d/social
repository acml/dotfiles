# Workspace: social

# Show on the left monitor at home by default, then BENQ, then laptop
workspace $ws7 output $OUTPUT-HOME-DELL-LEFT $OUTPUT-HOME-DELL-RIGHT $OUTPUT-HOME-BENQ $OUTPUT-LAPTOP

#assign [con_mark="_social.*"] → workspace number 7
#assign [con_mark="social"] → output ""

for_window [con_mark="_social.*"] \
  move container to workspace number 7

# Android Messages
for_window [instance="crx_.*" class="Chromium" title="Messages.*"] \
	mark "_social_messages"
for_window [instance="messages"] \
  mark "_social_messages"

# Facebook Messenger
for_window [instance="crx_.*" class="Chromium" title="Messenger"] \
	mark "_social_messenger"

# WhatsApp
for_window [instance="crx_.*" class="Chromium" title="WhatsApp"] \
	mark "_social_whatsapp"
for_window [instance="whats-app-*" class="whats-app-*" title="WhatsApp"] \
	mark "_social_whatsapp"

# Gmail
for_window [instance="crx_.*" class="Chromium" title="Gmail"] \
  mark "_social_gmail"

# Riot
for_window [instance="riot" class="Riot"] \
  mark "_social_riot"

# Rocket Chat
for_window [class="Rocket.Chat"] \
  mark "_social_rocket"

# BitWarden
for_window [class="Bitwarden"] \
  mark "_social_bitwarden"

# Thunderbird
for_window [class="Thunderbird"] \
  mark "_social_thunderbird"
