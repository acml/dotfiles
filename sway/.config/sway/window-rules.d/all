
# Firefox
for_window [class="Firefox"]  inhibit_idle fullscreen
for_window [app_id="firefox"] inhibit_idle fullscreen

# Logout (oblogout)
for_window [class="Oblogout" title="Openbox Logout"] \
	floating enable; \
	resize set width 100 ppt;

# Audio manager (popup)
for_window [app_id="pavucontrol"] \
  floating enable; \
  sticky enable;

# Gnome Calendar
for_window [app_id="gnome-calendar"] \
  floating enable; \
  sticky enable;

